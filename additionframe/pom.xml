                            <value>development</value>
                        </systemProperty>
                        <systemProperty>
                            <name>ruby.scripts.path</name>
                            <value>${basedir}/src/main/webapp/WEB-INF/scripts/ruby</value>
                        </systemProperty>
                        <!--
                        <systemProperty>
                            <name>ruby.gem.home</name>
