        <profile>
            <id>distr</id>
            <activation>
                <property>
                    <name>distr</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>distr</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <property name="distr-dir" value="${project.build.directory}/distribution"/>
                                        <property name="target-dir"
                                                  value="${distr-dir}/${project.artifactId}-${project.version}"/>
                                        <mkdir dir="${target-dir}"/>
                                        <unzip src="${org.apache.tomcat:tomcat:zip}"
                                               dest="${target-dir}/tomcat-${tomcat-version}">
                                            <patternset>
                                                <include name="apache-tomcat-${tomcat-version}/**"/>
                                            </patternset>
                                            <mapper>
                                                <globmapper from="apache-tomcat-${tomcat-version}/*" to="*"/>
                                            </mapper>
                                        </unzip>
                                        <unzip src="${project.build.directory}/${project.artifactId}-${project.version}.war"
                                               dest="${target-dir}/tomcat-${tomcat-version}/webapps/nuas">
                                        </unzip>

                                        <!-- DLL 库的日志配置文件 -->
                                        <copy  file="${project.basedir}/log.properties" todir="${target-dir}/tomcat-${tomcat-version}/bin">
                                        </copy>

                                        <tstamp>
                                            <format property="build-time" pattern="yyyyMMdd-HHmmss"/>
                                        </tstamp>
                                        <zip destfile="${distr-dir}/${project.artifactId}-${project.version}-build${build-time}-win-x86.zip"
                                             basedir="${target-dir}/.." level="9">
                                        </zip>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
